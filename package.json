{
  "name": "github-cloner",
  "version": "1.0.0",
  "description": "A Node.js script for cloning GitHub repositories",
  "type": "module",
  "main": "dist/cloner.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "pnpm watch",
    "watch": "tsc --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "action:clone": "node dist/cloner.js"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "octokit": "^4.1.3",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@typescript-eslint/utils": "^8.31.1",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.10.0"
}
